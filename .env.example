# JobAutoApply Environment Configuration
# Copy this file to .env and fill in your values

# ===================
# Authentication (NextAuth.js)
# ===================

# Required: Secret for NextAuth.js session encryption
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=your-nextauth-secret-here

# Required: Base URL for NextAuth.js callbacks
NEXTAUTH_URL=http://localhost:3000

# Google OAuth (for "Sign in with Google")
# Get these from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ===================
# API Keys
# ===================

# Required: Anthropic API Key for Claude
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here

# Required: Exa API Key for job search
EXA_API_KEY=your-exa-api-key-here

# Optional: RapidAPI Key for additional job boards
RAPIDAPI_KEY=your-rapidapi-key-here

# Database Configuration
DATABASE_PATH=./data/job-applier.db

# Application Settings
LOG_LEVEL=info
MAX_APPLICATIONS_PER_DAY=50
RATE_LIMIT_DELAY_MS=2000

# Browser Automation Settings
HEADLESS_MODE=true
BROWSER_TIMEOUT_MS=30000
SCREENSHOT_ON_ERROR=true

# LinkedIn Credentials (stored securely)
LINKEDIN_EMAIL=
LINKEDIN_PASSWORD=

# Indeed Credentials (if needed)
INDEED_EMAIL=
INDEED_PASSWORD=

# Safety Settings
DRY_RUN_MODE=false
REQUIRE_CONFIRMATION=true
BLOCKED_COMPANIES=
