# JobAutoApply Environment Configuration
# Copy this file to .env and fill in your values

# ===================
# Authentication (NextAuth.js)
# ===================

# Required: Secret for NextAuth.js session encryption
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=your-nextauth-secret-here

# Required: Base URL for NextAuth.js callbacks
NEXTAUTH_URL=http://localhost:3000

# Google OAuth (for "Sign in with Google")
# Get these from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Demo Authentication (DEVELOPMENT ONLY)
# Set to 'true' to enable demo login
# WARNING: Only works in development mode (NODE_ENV=development)
# This setting is ignored in production, staging, and testing environments
ENABLE_DEMO_AUTH=
# Required when ENABLE_DEMO_AUTH=true - set a secure password
# NOTE: Must be NEXT_PUBLIC_ for client-side demo login
NEXT_PUBLIC_DEMO_PASSWORD=

# ===================
# API Keys
# ===================

# Required: Anthropic API Key for Claude
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here

# Required: Exa API Key for job search
EXA_API_KEY=your-exa-api-key-here

# Optional: RapidAPI Key for additional job boards
RAPIDAPI_KEY=your-rapidapi-key-here

# ===================
# Credentials Encryption (REQUIRED)
# ===================

# Required: Encryption key for storing platform credentials securely
# Generate with: openssl rand -base64 32
CREDENTIALS_ENCRYPTION_KEY=your-encryption-key-here

# Required: Salt for key derivation
# Generate with: openssl rand -base64 16
CREDENTIALS_ENCRYPTION_SALT=your-encryption-salt-here

# ===================
# Database Configuration
# ===================
DATABASE_PATH=./data/job-applier.db

# Application Settings
LOG_LEVEL=info
MAX_APPLICATIONS_PER_DAY=50
MAX_APPLICATIONS_PER_HOUR=10
MIN_DELAY_BETWEEN_ACTIONS=2000
MAX_DELAY_BETWEEN_ACTIONS=5000

# Browser Automation Settings
BROWSER_HEADLESS=true
BROWSER_TIMEOUT=30000
SCREENSHOT_ON_ERROR=true

# LinkedIn Credentials (stored securely)
LINKEDIN_EMAIL=
LINKEDIN_PASSWORD=

# Indeed Credentials (if needed)
INDEED_EMAIL=
INDEED_PASSWORD=

# Safety Settings
DRY_RUN_MODE=false
REQUIRE_CONFIRMATION=true
BLOCKED_COMPANIES=

# ===================
# Application Mode
# ===================

# Controls whether to show demo data or real data
# Values: 'demo' or 'production'
# - 'demo': Shows mock/sample data for demonstration purposes
# - 'production' (default): Only shows real data from API sources
NEXT_PUBLIC_APP_MODE=production
