{
  "name": "@job-applier/cli",
  "version": "1.0.0",
  "description": "Command-line interface for automated job applications",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "job-applier": "./dist/index.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "start": "node dist/index.js"
  },
  "dependencies": {
    "@job-applier/core": "*",
    "@job-applier/config": "*",
    "@job-applier/database": "*",
    "@job-applier/orchestrator": "*",
    "commander": "^11.1.0",
    "inquirer": "^9.2.12",
    "chalk": "^5.3.0",
    "ora": "^7.0.1",
    "cli-table3": "^0.6.3",
    "figlet": "^1.7.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/inquirer": "^9.0.7",
    "@types/figlet": "^1.5.8",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.2"
  }
}
