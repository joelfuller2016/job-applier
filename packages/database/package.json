{
  "name": "@job-applier/database",
  "version": "1.0.0",
  "description": "SQLite database layer for JobAutoApply",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist *.tsbuildinfo",
    "test": "vitest run",
    "test:watch": "vitest",
    "migrate": "tsx src/migrations/run.ts"
  },
  "dependencies": {
    "@job-applier/core": "*",
    "sql.js": "^1.10.0"
  },
  "devDependencies": {
    "typescript": "^5.3.2",
    "vitest": "^4.0.15",
    "rimraf": "^5.0.5",
    "tsx": "^4.6.2"
  }
}
