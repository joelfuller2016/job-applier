# JobAutoApply Production Environment Configuration
# Copy this file to .env for PRODUCTION deployments
#
# SECURITY: Production mode requires all authentication credentials to be set.
# Demo features are DISABLED in production mode.

# ===================
# Application Mode
# ===================

# Production mode (default) - demo features disabled
APP_MODE=production

# Client-side mode detection (must match APP_MODE)
NEXT_PUBLIC_APP_MODE=production

# ===================
# Authentication (NextAuth.js) - REQUIRED
# ===================

# REQUIRED: Secret for NextAuth.js session encryption
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=

# REQUIRED: Base URL for NextAuth.js callbacks
NEXTAUTH_URL=https://your-production-domain.com

# REQUIRED: Google OAuth credentials
# Get these from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# ===================
# API Keys - REQUIRED
# ===================

# REQUIRED: Anthropic API Key for Claude
ANTHROPIC_API_KEY=

# REQUIRED: Exa API Key for job search
EXA_API_KEY=

# Optional: RapidAPI Key for additional job boards
RAPIDAPI_KEY=

# ===================
# Database Configuration
# ===================

DATABASE_PATH=./data/job-applier.db

# ===================
# Application Settings
# ===================

LOG_LEVEL=warn
MAX_APPLICATIONS_PER_DAY=50
RATE_LIMIT_DELAY_MS=2000

# ===================
# Browser Automation Settings
# ===================

HEADLESS_MODE=true
BROWSER_TIMEOUT_MS=30000
SCREENSHOT_ON_ERROR=false

# ===================
# Job Board Credentials (stored securely)
# ===================

LINKEDIN_EMAIL=
LINKEDIN_PASSWORD=

INDEED_EMAIL=
INDEED_PASSWORD=

# ===================
# Safety Settings
# ===================

DRY_RUN_MODE=false
REQUIRE_CONFIRMATION=true
BLOCKED_COMPANIES=
