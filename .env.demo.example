# JobAutoApply Demo Environment Configuration
# Copy this file to .env for DEMO/TESTING deployments
#
# WARNING: Demo mode enables test authentication - NOT FOR PRODUCTION USE
# Demo credentials: demo@example.com / demo123

# ===================
# Application Mode
# ===================

# Demo mode - enables demo authentication and test features
APP_MODE=demo

# Client-side mode detection (must match APP_MODE)
NEXT_PUBLIC_APP_MODE=demo

# ===================
# Authentication (NextAuth.js)
# ===================

# Demo mode uses a default secret if not provided
# For better security, still set a proper secret:
NEXTAUTH_SECRET=demo-mode-secret-change-me

# Base URL for NextAuth.js callbacks
NEXTAUTH_URL=http://localhost:3000

# Google OAuth (optional in demo mode)
# Demo login works without these, but Google sign-in requires them
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Enable demo authentication in development
ENABLE_DEMO_AUTH=true
# Required when ENABLE_DEMO_AUTH=true
NEXT_PUBLIC_DEMO_PASSWORD=demo123

# ===================
# API Keys
# ===================

# Required: Anthropic API Key for Claude
ANTHROPIC_API_KEY=

# Required: Exa API Key for job search
EXA_API_KEY=

# Optional: RapidAPI Key for additional job boards
RAPIDAPI_KEY=

# ===================
# Database Configuration
# ===================

DATABASE_PATH=./data/job-applier-demo.db

# ===================
# Application Settings
# ===================

LOG_LEVEL=debug
MAX_APPLICATIONS_PER_DAY=10
MAX_APPLICATIONS_PER_HOUR=10
MIN_DELAY_BETWEEN_ACTIONS=1000
MAX_DELAY_BETWEEN_ACTIONS=1000

# ===================
# Browser Automation Settings
# ===================

BROWSER_HEADLESS=false
BROWSER_TIMEOUT=60000
SCREENSHOT_ON_ERROR=true

# ===================
# Job Board Credentials (optional for demo)
# ===================

LINKEDIN_EMAIL=
LINKEDIN_PASSWORD=

INDEED_EMAIL=
INDEED_PASSWORD=

# ===================
# Safety Settings (demo-friendly defaults)
# ===================

DRY_RUN_MODE=true
REQUIRE_CONFIRMATION=false
BLOCKED_COMPANIES=

# ===================
# Demo Mode Features
# ===================

# Enable demo features in development (only works with APP_MODE=demo)
ENABLE_DEMO_FEATURES=true
